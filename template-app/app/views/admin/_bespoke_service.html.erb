<button id="create_bespoke_service_btn">
    Create Bespoke Service
</button>
<div id="modalDialog" class="modal">
  <div class="modal-content animate-top">
    <div class="modal-header">
        <h5 class="modal-title">Create Bespoke Service For <%= company.name %></h5>
        <button type="button" class="close" id="close_btn">
          <span aria-hidden="true">x</span>
        </button>
    </div>
    <div id="model-error">
    </div>
    <%= form_with url: handle_company_bespoke_service_path, method: :get, html: { remote: true, id: "create_bespoke_service_from"} do |f| %>
        <div class="modal-body">
            <%= f.label :base_service_id, "Service Name" %>
            <%= f.text_field :service_name, required: true, style: "width: 80%" %>
            <%= f.hidden_field :company_id, value: company.id %>
            <br>
            <%= f.label :base_service_id, "Base Service" %>
            <%= f.select :base_service_id, BxBlockCategories::Category.where(company_id: nil).map{ |p| [p.name, p.id] }, {}, multiple: false, include_blank: false %>
            <br>
            <%= f.label :sub_category, "Sub Category" %>
            <%= f.select :sub_category, [["Full Day", "Full day"], ["Half Day", "Half day"], ["Bespoke - Multi Day", "Bespoke"]], {}, multiple: false, include_blank: false %>
            <br>
            <%= f.label :base_service_id, "Secondary Services" %>
            <%= f.select :secondary_service_ids, BxBlockCategories::Category.where(company_id: nil).map{ |p| [p.name, p.id] }, {}, multiple: true %>
        </div>
        <div class="modal-footer">
            <%= f.submit "Submit", class:"btn btn-primary" %>
        </div>
    <% end %>
  </div>
</div>

